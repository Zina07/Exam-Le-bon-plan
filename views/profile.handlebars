{{>navbar}}

<h1>Your profile</h1>
<p> {{username}}</p>

{{#each products}}
<div class="card" style="width: 18rem;">
    <a href="/products/{{this._id}}">
        <img class="card-img-top" src="{{this.pictureUrl}}" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">{{this.name}} - {{this.price}}</h5>
            <p class="card-text">{{this.description}}</p>
        </div>
    </a>
</div>

{{/each}}